
@{
    ViewData["Title"] = "Add";
}
@model Product
<h1>Ürün Ekleme</h1>


<form asp-controller="Products" asp-action="Add" method="post">

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Ürün İsmi</label>
        <input class="form-control" asp-for="Name">
       
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Ürün Fiyatı</label>
        <input class="form-control" asp-for="Price">

    </div>

    <div class="mb-3">
        <label asp-for="Stock" class="form-label">Ürün Stoğu</label>
        <input type="text" class="form-control" asp-for="Stock">

    </div>

    <div class="mb-3">
        @*@<label asp-for="Color" class="form-label">Ürün Rengi</label>
        <input class="form-control" asp-for="Color">*@

        <select class="form-select" asp-for="Color" asp-items="@ViewBag.ColorSet">

        <option value="">Renk seçiniz</option>
        </select>

    </div>

    <div class="form-check">
        <input class="form-check-input" asp-for="isPublish">
        <label class="form-check-label" asp-for="isPublish">
            Yayınla
        </label>


        
    </div>
    <div class="mb-3 mt-3">
        <span>Ürün satış ayı</span>
        @foreach (var item in ViewBag.Expire as Dictionary<string, int>)
        {
            <div class="form-check">
                <input class="form-check-input" id=@(item.Value)Expire type="radio" asp-for="Expire" value="@item.Value">
                <label class="form-check-label" asp-for="Expire" for=@(item.Value)Expire>
                    @item.Key
                </label>
            </div>
        }
    </div>

    <div class="form-floating mb-3">
    <textarea asp-for="Description" class="form-control" placeholder="Ürün açıklama"  style="height: 100px"></textarea>
        <label asp-for="Description">Comments</label>
    </div>

    <div class="mb-3">
        <label asp-for="PublishDate" class="form-label">Ürün Yayınlanma Tarihi</label>
        <input class="form-control" asp-for="PublishDate">

    </div>
    
    <button type="submit" class="btn btn-primary">Ürün Kaydet</button>


  
</form>

